---

interface Props {
  article: {
    title: string;
    excerpt: string;
    date: string;
    readingTime: string;
    category?: string;
    featuredImage: string;
    slug: string;
  };
}

const { article } = Astro.props;
---

<article class="relative bg-gradient-to-r from-gray-900 to-gray-700 text-white rounded-lg overflow-hidden shadow-lg">
  {article.featuredImage && (
    <img 
      src={article.featuredImage} 
      alt={article.title} 
      class="absolute inset-0 w-full h-full object-cover opacity-50"
      loading="lazy"
    />
  )}
  <div class="relative p-8 z-10">
    <div class="text-sm mb-4">
      <span>{article.date}</span> • <span>{article.readingTime}</span>
    </div>
    <h2 class="text-4xl font-bold mb-4">{article.title}</h2>
    <p class="text-gray-200 mb-6 line-clamp-2">{article.excerpt}</p>
    <a href={`/blog/${article.slug}`} class="bg-red-500 text-white px-6 py-2 rounded hover:bg-red-600 inline-block">
      Lire plus →
    </a>
  </div>
</article>