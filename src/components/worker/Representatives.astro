    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4">
      {
        representatives.map((rep) => (
          <article class="bg-white overflow-hidden transition-shadow group flex lg:flex-col md:flex-col flex-row gap-y-0 gap-x-4">
            <div class="relative lg:h-full md:h-full h-[58px] lg:min-w-full md:min-w-full min-w-[58px] lg:aspect-auto md:aspect-auto aspect-[1/1] lg:rounded-2xl md:rounded-2xl rounded-md overflow-hidden">
              <img
                src={rep.image}
                alt={rep.name}
                class="w-full h-full  object-cover  transition-transform duration-300 "
              />
            </div>

            <div class="relative w-full">
              {rep.badge && (
                <BadgeCorner
                  orientation="horizontal"
                  position="left"
                  class="rounded-2xl lg:visible md:visible invisible"
                  style="border-bottom-left-radius: 10px;"
                >
                  {rep.badge}
                </BadgeCorner>
              )}
              <div class="relative z-10 lg:py-5 md:py-5 py-0 bg-white flex flex-col gap-y-1">
                <div class="flex flex-row gap-1 lg:flex-col md:flex-col lg:items-start md:items-start items-end">
                  <h3 class="text-[22px] font-bold text-gray-900 line-clamp-2 leading-none">
                    {rep.name}
                  </h3>
                  <p class="text-[sm] ">{rep.lastName}</p>
                </div>
                <p class="text-[12px] font-[700]">{rep.position}</p>
                <div>
                  
                {rep.badge && (
                  <Badge class="lg:hidden md:hidden sm:flex w-fit h-[18px]">
                    {rep.badge}
                  </Badge>
                )}
                
                <div class="flex flex-row gap-1 lg:flex-col md:flex-col lg:items-start md:items-start items-center w-full justify-between">
                  <p class="text-[12px] font-[700] line-clamp-3 leading-none">
                    {rep.company}
                  </p>
                  <a href={"/"}>
                    <Button class="p-1 h-[18px] text-[12px]">Contact</Button>
                  </a>
                </div>
              </div>
            </div>
