---
// src/components/layout/Footer.astro
import LogoPrimary from "../logo/LogoPrimary.astro";
import Button from "../ui/Button.astro";

const year = new Date().getFullYear();

const footerLinks = {
  accueil: [
    { label: "Qui sommes-nous ?", href: "/about" },
    { label: "Vos représentants", href: "/representatives" },
    { label: "Pourquoi ouvrir un compte ?", href: "/why-account" },
  ],
  liensUtiles: [
    { label: "Plan du site", href: "/sitemap" },
    { label: "Mentions légales", href: "/legal" },
    { label: "Conditions générales", href: "/terms" },
  ],
};
---

<footer class="bg-primary-foreground px-15 py-10">
  <div class="w-full mb-10 flex flex-row justify-between h-[322px] gap-x-10">
    <div class="w-full bg-image relative rounded-xl overflow-hidden shadow-2xl">
      <!-- e-FO Card Overlay -->
      <div
        class="relative p-4 flex items-center justify-start h-full aspect-[1.3/1]"
      >
        <div
          class="flex flex-col justify-between bg-gradient-to-br bg-primary text-white rounded-xl px-7 py-4 shadow-2xl h-full"
        >
          <div>
            <h2 class="text-[48px] text-secondary font-[700] mb-2 leading-none">
              e-FO Groupe Bouygues
            </h2>

            <p class="text-[20px] text-white/90 mb-1 leading-none">
              La plateforme sécurisée où retrouver toutes vos informations
              syndicale.
            </p>
          </div>
          <Button color="secondary"> Mon compte e-FO </Button>
        </div>
      </div>
    </div>
    <div
      class="aspect-[1/1] rounded-xl shadow p-6 flex flex-col justify-between border-2 rounded-full border-primary w-[312px]"
    >
      <div>
        <h3 class="text-[32px] font-[700] text-primary leading-none">
          L’abonnement newsletter
        </h3>
        <p
          class="text-gray-600 text-sm mt-3 font-[600] text-[20px] text-[#400707]"
        >
          Recevez chaque mois les dernières mises à jour.
        </p>
      </div>
      <Button color="primary">S'inscrire</Button>
    </div>
  </div>
  <div class="w-full pt-10 border-t-3 border-primary">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
      <!-- Colonne 1 : Logo et informations -->
      <div class="space-y-6">
        <div class="flex items-center gap-3">
          <LogoPrimary />
          <div class="flex flex-col">
            <span class="font-bold text-secondary text-lg">Groupe Bouygues</span
            >
          </div>
        </div>

        <div class="text-sm text-gray-700 space-y-1">
          <p>1 avenue Eugène Freyssinet- Guyancourt</p>
          <p>78061 Saint-Quentin-en-Yvelines</p>
        </div>

        <!-- Icônes sociales -->
        <div class="flex items-center gap-4">
          <!-- YouTube -->
          <a
            href="https://youtube.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-secondary hover:text-primary transition-colors"
            aria-label="YouTube"
          >
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
              ></path>
            </svg>
          </a>

          <!-- WhatsApp -->
          <a
            href="https://wa.me/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-secondary hover:text-primary transition-colors"
            aria-label="WhatsApp"
          >
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
              ></path>
            </svg>
          </a>

          <!-- Bouton contacter vos élus -->
          <a
            href="/contact"
            class="bg-secondary hover:bg-primary text-white px-4 py-2 rounded-full text-xs font-medium transition-colors flex items-center gap-2"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            contacter vos élus
          </a>
        </div>
      </div>

      <!-- Colonne 2 : Accueil -->
      <div>
        <h3 class="font-bold text-secondary text-base mb-4">Accueil</h3>
        <ul class="space-y-3">
          {
            footerLinks.accueil.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-700 hover:text-primary transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Colonne 3 : Mon compte e-FO (avec badge) -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <h3 class="font-bold text-secondary text-base">Mon compte e-FO</h3>
        </div>
      </div>

      <!-- Colonne 4 : Liens utiles -->
      <div>
        <h3 class="font-bold text-secondary text-base mb-4">Liens utiles</h3>
        <ul class="space-y-3">
          {
            footerLinks.liensUtiles.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-700 hover:text-primary transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</footer>
<style>
  .bg-image {
    background-image: url("../../images/hero.jpg");
    background-repeat: repeat;
    background-size: cover;
  }
</style>
