---
// src/components/layout/Footer.astro
import LogoSecondary from "../logo/LogoSecondary.astro";
import Button from "../ui/Button.astro";
import { SEO } from "@/lib/constants";
import PreFooter from "./PreFooter.astro";

const year = new Date().getFullYear();

const footerLinks = {
  accueil: [
    { label: "Qui sommes-nous ?", href: "/about" },
    { label: "Vos représentants", href: "/worker" },
    { label: "Pourquoi ouvrir un compte ?", href: "/why-account" },
  ],
  liensUtiles: [
    { label: "Plan du site", href: "/" },
    { label: "Mentions légales", href: "/legal-notice" },
    { label: "Conditions générales", href: "/terms-of-use" },
  ],
};
---

<footer class="bg-primary-foreground md:px-15 md:py-10 p-[20px]">
  <PreFooter />
  <div
    class="w-full pt-10 border-t-3 border-primary text-[#674141] lg:px-6 md:px-3 px-[20px] max-w-[1440px] mx-auto"
  >
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
      <!-- Colonne 1 : Logo et informations -->
      <div class="space-y-3">
        <div class="flex items-center gap-3 text-primary">
          <LogoSecondary />
        </div>

        <div class="text-sm space-y-1">
          {SEO.adress}
        </div>

        <!-- Icônes sociales -->
        <div class="flex items-center gap-4">
          <!-- YouTube -->
          <a
            href={SEO.youtube}
            target="_blank"
            rel="noopener noreferrer"
            class="text-secondary hover:text-primary transition-colors"
            aria-label="YouTube"
          >
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
              ></path>
            </svg>
          </a>

          <!-- WhatsApp -->
          <a
            href="https://wa.me/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-secondary hover:text-primary transition-colors"
            aria-label="WhatsApp"
          >
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
              ></path>
            </svg>
          </a>

          <a href="/worker" target="_blank">
            <Button variant="contained" color="secondary">
              <svg
                width="12"
                height="12"
                viewBox="0 0 12 12"
                fill="currentColor"
                stroke="currentColor"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M9 2.5H3C2.44772 2.5 2 2.94772 2 3.5V6.5C2 7.05228 2.44772 7.5 3 7.5H3.5C3.77614 7.5 4 7.72386 4 8V9.5L6.36304 7.60957C6.4517 7.53864 6.56185 7.5 6.67539 7.5H9C9.55228 7.5 10 7.05228 10 6.5V3.5C10 2.94772 9.55228 2.5 9 2.5Z"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
              <span>Contacter vos élu(e)s</span>
            </Button>
          </a>
        </div>
      </div>

      <!-- Colonne 2 : Accueil -->
      <div>
        <h3 class="font-bold text-base mb-2">Accueil</h3>
        <ul class="space-y-[1px]">
          {
            footerLinks.accueil.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-primary transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Colonne 3 : Mon compte e-FO (avec badge) -->
      <div>
        <div class="flex items-center gap-2 mb-2">
          <svg
            width="12"
            height="12"
            viewBox="0 0 12 12"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M2.44454 9.63912L4.75 7.33367M4.75 7.33367C5.24765 7.83132 5.93515 8.13912 6.69454 8.13912C8.21333 8.13912 9.44454 6.90791 9.44454 5.38912C9.44454 3.87034 8.21333 2.63912 6.69454 2.63912C5.17576 2.63912 3.94454 3.87034 3.94454 5.38912C3.94454 6.14852 4.25235 6.83602 4.75 7.33367Z"
              stroke="#1D1D1D"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
          <h3 class="font-bold text-secondary text-base">Mon compte e-FO</h3>
          <svg
            width="12"
            height="12"
            viewBox="0 0 12 12"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M2.44454 9.63912L4.75 7.33367M4.75 7.33367C5.24765 7.83132 5.93515 8.13912 6.69454 8.13912C8.21333 8.13912 9.44454 6.90791 9.44454 5.38912C9.44454 3.87034 8.21333 2.63912 6.69454 2.63912C5.17576 2.63912 3.94454 3.87034 3.94454 5.38912C3.94454 6.14852 4.25235 6.83602 4.75 7.33367Z"
              stroke="#1D1D1D"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </div>
      </div>

      <!-- Colonne 4 : Liens utiles -->
      <div>
        <h3 class="font-bold text-secondary text-base mb-2">Liens utiles</h3>
        <ul class="space-y-[1px]">
          {
            footerLinks.liensUtiles.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-700 hover:text-primary transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</footer>
<style>
  .bg-image {
    background-image: url("../../images/hero.jpg");
    background-repeat: repeat;
    background-size: cover;
  }
</style>
