<section class="py-16">
  <div class="container mx-auto px-4">
    <!-- En-tête avec titre et bouton menu -->
    <div class="flex items-center justify-between mb-10">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
        Liste des prochains évènements
      </h2>

      <!-- Bouton hamburger menu -->
      <button
        class="flex items-center gap-2 text-gray-700 hover:text-primary transition-colors"
        aria-label="Menu des filtres"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 20 20"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M2 4H18M2 10H18M2 16H18"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
    </div>

    <!-- Grille d'événements -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        events.map((event) => (
          <article class="bg-white rounded-2xl overflow-hidden  transition-shadow group">
            {/* Image */}
            <div class="relative h-48 bg-gray-200 overflow-hidden">
              {/* Badge catégorie */}
              <BadgeCorner orientation="horizontal" position="left">
                {event.category}
              </BadgeCorner>

              <img
                src={event.image}
                alt={event.title}
                class="w-full h-full object-cover  transition-transform duration-300"
              />
            </div>

            {/* Contenu */}
            <div class="p-5">
              {/* Titre */}
              <h3 class="text-[22px] font-bold text-gray-900 mb-2 line-clamp-2 leading-none">
                {event.title}
              </h3>

              {/* Localisation */}
              <p class="text-sm text-gray-600 mb-3">{event.location}</p>

              {/* Description */}
              <p class="text-sm text-gray-600 mb-4 line-clamp-3 leading-none">
                {event.description}
              </p>

              {/* Bouton Lire plus */}
