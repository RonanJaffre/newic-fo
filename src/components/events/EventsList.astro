<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <!-- En-tête avec titre et bouton menu -->
    <div class="flex items-center justify-between mb-10">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
        Liste des prochains évènements
      </h2>

      <!-- Bouton hamburger menu -->
      <button
        class="flex items-center gap-2 text-gray-700 hover:text-primary transition-colors"
        aria-label="Menu des filtres"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 20 20"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M2 4H18M2 10H18M2 16H18"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
    </div>

    <!-- Grille d'événements -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        events.map((event) => (
          <article class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-shadow group">
            {/* Image */}
            <div class="relative h-48 bg-gray-200 overflow-hidden">
              {/* Badge catégorie */}
              <div class="absolute top-3 left-3 z-10">
                <span class="bg-primary text-white px-3 py-1.5 rounded-md text-xs font-semibold">
                  {event.category}
                </span>
              </div>

              {/* Image placeholder ou réelle */}
              {event.image ? (
                <img
                  src={event.image}
                  alt={event.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              ) : (
                <div class="absolute inset-0 flex items-center justify-center text-gray-400">
                  <svg
                    class="w-16 h-16"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                </div>
              )}
            </div>

            {/* Contenu */}
            <div class="p-5">
              {/* Titre */}
              <h3 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2">
                {event.title}
              </h3>

              {/* Localisation */}
              <p class="text-sm text-gray-600 mb-3">{event.location}</p>

              {/* Description */}
              <p class="text-sm text-gray-600 mb-4 line-clamp-3">
                {event.description}
              </p>

              {/* Bouton Lire plus */}
              <a
                href={event.link}
                class="inline-flex items-center gap-2 bg-primary hover:bg-secondary text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
              >
                Lire plus
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

