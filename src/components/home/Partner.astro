---
import Bouygues from "../logo/Bouygues.astro";
import BouyguesBatiment from "../logo/BouyguesBatiment.astro";
import BouyguesImmo from "../logo/BouyguesImmo.astro";
import BouyguesTelecom from "../logo/BouyguesTelecom.astro";
import Colas from "../logo/Colas.astro";
import Equans from "../logo/Equans.astro";
import Tfi from "../logo/Tfi.astro";
---

<section class="flex flex-row justify-between w-full flex-wrap gap-1">
  {
    [
      <BouyguesBatiment />,
      <BouyguesImmo />,
      <Bouygues />,
      <BouyguesTelecom />,
      <Colas />,
      <Equans />,
      <Tfi />,
    ].map((i) => (
      <button class="hover:shadow-sm rounded-full transition-shadow cursor-pointer duration-400">
        {i}
      </button>
    ))
  }
</section>
